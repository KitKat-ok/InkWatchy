{
    // Used extension: actboy168.tasks
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Reset Watchy",
            "type": "shell",
            "command": "esptool.py --after hard_reset chip_id",
            "icon": {
                "id": "refresh",
                "color": "terminal.ansiGreen"
              }
        },
        {
            "label": "Generate resources",
            "type": "shell",
            "command": "cd resources && ./generate.sh",
            "icon": {
                "id": "file-binary",
                "color": "terminal.ansiGreen"
              }
        },
        {
            "label": "Patch wifi tool",
            "type": "shell",
            "command": "cd resources/other/wifiTool/ && ./patch.sh",
            "icon": {
                "id": "flame",
                "color": "terminal.ansiGreen"
              }
        },
    ]
}
